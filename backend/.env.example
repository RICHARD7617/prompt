# Pesapal Credentials
# Get these from https://pesapal.com dashboard

PESAPAL_CONSUMER_KEY=your_consumer_key_here
PESAPAL_CONSUMER_SECRET=your_consumer_secret_here

# Your callback URL (where Pesapal sends payment confirmation)
# Local: http://localhost:3000/api/pesapal/callback
# Vercel: https://your-backend-domain.vercel.app/api/pesapal/callback
# Railway: https://your-railway-app.railway.app/api/pesapal/callback
CALLBACK_URL=https://your-backend-domain.vercel.app/api/pesapal/callback

# Server port
PORT=3000

# Environment: sandbox or production
# PESAPAL_ENV=production
